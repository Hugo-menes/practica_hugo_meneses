@{
    ViewData["Title"] = "Home Page";
}
<style>
body{
    background-color: #9c5656 ;
    margin: 30px;
    font-family: Arial, Helvetica, sans-serif;

}

 #formulario-producto{
    background-color: #a9be41;
    border: 3px solid #ccc;
    border-radius: 30px;
    }



</style>

<body>
<div class="text-center">
    <h1 class="display-4">BIENVENIDO ALA TIENDA  "TechStore"</h1>

<h1>Agregar Producto</h1>
    <form id="fomulario-producto">
        <label for="nomb_prod">Nombre del producto:</label>
        <input type="text" id="nomb_prod" name="nomb_prod" required><br> <br/>
        <label for="price">Precio del producto:</label>
        <input type="number" id="price" name="price" min="0" step="0.01" required><br><br/>
        <button type="button" onclick="agregarProducto()">Agregar producto</button>
    </form>
    <div id="resultado"></div>


     <script>
        function agregarProducto() {
            var productName = document.getElementById('nomb_prod').value;
            var productPrice = parseFloat(document.getElementById('price').value);
            var tax = productPrice * 0.18;
            var totalPrice = productPrice + tax;
            var resultadoDiv = document.getElementById('resultado');
            resultadoDiv.innerHTML = `<p>Producto: ${productName}</p>
                                      <p>Precio: ${productPrice}</p>
                                      <p>Impuesto (18%): ${tax}</p>
                                      <p>Precio total: ${totalPrice}</p>`;
        }
    </script>



    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
</body>